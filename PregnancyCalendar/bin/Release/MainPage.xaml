<Page
    x:Class="PregnancyCalendar.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PregnancyCalendar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC8FFC8" Offset="1"/>
                <GradientStop Color="#FF5FA778" Offset="0.454"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="329,187,716,0" TextWrapping="Wrap" Text="Enter the date of your last period" VerticalAlignment="Top" Height="34" Width="321" FontSize="22" Style="{StaticResource BasicTextStyle}" TextAlignment="Right"/>
        <TextBox x:ConnectionId='1' x:Name="txtDate" HorizontalAlignment="Center" Margin="670,192,539,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"                                  />
        <TextBlock x:Name="lblCurrentDay" HorizontalAlignment="Left" Margin="89,407,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.5,0.5" Width="614" FontSize="30" Style="{StaticResource BasicTextStyle}" Text="You are on day 15"/>
        <TextBlock x:Name="lblDateOfBirth" HorizontalAlignment="Left" Margin="42,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="59" RenderTransformOrigin="0.5,0.5" Width="1278" FontSize="36" Style="{StaticResource BasicTextStyle}" Text="Your due date is January1, 2013" TextAlignment="Center"/>
        <TextBlock x:Name="lblWeek" HorizontalAlignment="Left" Margin="89,452,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.5,0.5" Width="614" FontSize="30" Style="{StaticResource BasicTextStyle}" Text="You are in week 1"/>
        <TextBlock x:Name="lblCurrentTrimester" Margin="89,502,663,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.5,0.5" FontSize="30" Style="{StaticResource BasicTextStyle}" Text="1st Trimester"/>
        <TextBlock x:Name="lblRemainingDays" HorizontalAlignment="Left" Margin="713,405,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.5,0.5" Width="624" FontSize="30" Style="{StaticResource BasicTextStyle}" Text="Days left"/>
        <TextBlock x:Name="lblRemainingWeeks" HorizontalAlignment="Left" Margin="713,450,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.5,0.5" Width="624" FontSize="30" Style="{StaticResource BasicTextStyle}" Text="Weeks left"/>
        <TextBlock x:Name="lblNextTrimesterStarts" HorizontalAlignment="Left" Margin="713,495,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="115" RenderTransformOrigin="0.5,0.5" Width="437" FontSize="30" Style="{StaticResource BasicTextStyle}" Text="2nd Trimester starts April 3rd 2013"/>
        <TextBlock x:Name="lblDateOfBirth_Copy" HorizontalAlignment="Left" Margin="89,329,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="73" RenderTransformOrigin="0.5,0.5" Width="614" FontSize="48" Style="{StaticResource BasicTextStyle}" Text="Currently..."/>
        <TextBlock x:Name="lblDateOfBirth_Copy1" HorizontalAlignment="Left" Margin="713,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="73" RenderTransformOrigin="0.5,0.5" Width="624" FontSize="48" Style="{StaticResource BasicTextStyle}" Text="Countdown..."/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="85,399,0,0" VerticalAlignment="Top" Width="515" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="710,400,0,0" VerticalAlignment="Top" Width="440" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </Border.RenderTransform>
        </Border>
        <TextBlock HorizontalAlignment="Center" Margin="312,153,716,0" TextWrapping="Wrap" Text="Enter your due date" VerticalAlignment="Top" Height="34" Width="338" FontSize="22" Style="{StaticResource BasicTextStyle}" TextAlignment="Right"/>
        <TextBox x:ConnectionId='2' x:Name="txtDueDate" HorizontalAlignment="Center" Margin="670,155,539,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"                                     />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="140" Width="1278" FontSize="72" Style="{StaticResource BasicTextStyle}" Margin="37,10,0,0" TextAlignment="Center">
        	<Run Text="Pregnancy Due Date Countdown"/>
        	<LineBreak/>
        	<Run FontSize="24" Text="Enter either your due date or the first day of your last period and stay up to date!"/>
        </TextBlock>
        <Button x:ConnectionId='3' Content="Notify" HorizontalAlignment="Left" Margin="1125,99,0,0" VerticalAlignment="Top" Height="51" Width="146"                       />

    </Grid>
</Page>

